@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ІМПЕРІЯ ОДЯГУ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FatherShopImperiyaOdyagu.styles.css" asp-append-version="true" />
</head>
<body style="background-color:aliceblue">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background-color:darkgray">
            <div class="container-fluid">
                <a style="font-family:fantasy" class="nav-link text-dark mymenu" asp-area="" asp-controller="Home" asp-action="Index"><span>Home</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark mymenu" asp-area="" asp-controller="Products" asp-action="Index">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mymenu" asp-area="" asp-controller="Home" asp-action="Privacy">Про нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mymenu" asp-area="" asp-controller="Admins" asp-action="Login">Логін</a>
                        </li>
                        <li class="nav-item">
                            @if (Accessor.HttpContext.Session.GetInt32("Logged") > 0)
                            {
                                <a class="nav-link text-dark mymenu" asp-area="" asp-controller="Admins" asp-action="Registration">Реєстрація Адмінів</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Accessor.HttpContext.Session.GetInt32("Logged") > 0)
                            {
                                <a class="nav-link text-dark mymenu" asp-area="" asp-controller="Admins" asp-action="Index">Лист Адмінів</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Магазин "Імперія Одягу" - <a asp-area="" asp-controller="Home" asp-action="Privacy">Про нас</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
